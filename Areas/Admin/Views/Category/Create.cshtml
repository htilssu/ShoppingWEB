@model ShoppingWEB.Areas.Admin.Models.CategoryModel

@{
    ViewData["Title"] = "Categories";
    Layout = "_AdminLayout";
}

<h1>Tạo loại mặt hàng</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control"/>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input name="imageFile" type="file" accept=".png, .jpeg, .jpg" class="form-control"/>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-success mt-2"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary mt-2" asp-action="Index">Quay trở về danh sách</a>
</div>