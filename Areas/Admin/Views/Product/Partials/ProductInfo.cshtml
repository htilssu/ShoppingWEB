@model Product

<div class="product-detail">
    <div class="title text-uppercase p-3">
        chi tiết sản phẩm
    </div>
    <div class="data p-3">
        <div class="d-flex">
            <div class="data-display">Phong cách</div>
            <div class="data-content">@Model.Style</div>
        </div>
        <div class="d-flex">
            <div class="data-display">Xuất xứ</div>
            <div class="data-content">@Model.MadeIn</div>
        </div>
        <div class="d-flex">
            <div class="data-display">Chất liệu</div>
            <div class="data-content">@Model.Material</div>
        </div>
        <div class="d-flex">
            <div class="data-display">Tên tổ chức chịu trách nhiệm sản xuất</div>
            <div class="data-content">@Model.Seller!.SellerName</div>
        </div>
        <div class="d-flex">
            <div class="data-display">Địa chỉ tổ chức chịu trách nhiệm sản xuất</div>
            <div class="data-content">@Model.Seller.Address</div>
        </div>
        <div class="d-flex">
            <div class="data-display">Kho hàng</div>
            <div class="data-content">@Model.TypeProducts.Sum(t => t.Sizes.Sum(s => s.Quantity))</div>
        </div>
        <div class="d-flex">
            <div class="data-display">Gửi từ</div>
            <div class="data-content">@Model.Seller.Address</div>
        </div>
    </div>
</div>
<div class="product-description">
    <div class="title text-uppercase p-3">
        mô tả sản phẩm
    </div>
    <div class="content p-3 mt-4">
        @foreach (var s in Model.LongDescription!.Split('\n'))
        {
            <p>@s</p>
            <p></p>
        }
    </div>
</div>