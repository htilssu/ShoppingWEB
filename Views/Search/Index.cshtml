@model List<Product>;

@{
    ViewBag.Title = $"{ViewBag.Search} giá tốt tháng {DateTime.Today.Month}";
    Layout = "_Layout";
}


@section Styles
{
    <link rel="stylesheet" href="~/css/actions/HomeCategory.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/partials/ProductListStyle.css" asp-append-version="true"/>
}

@section Scripts
{
    <script src="~/js/actions/jscate.js" asp-append-version="true"></script>
}

<div class="container-md py-3">
    @{
        await Html.RenderPartialAsync("Partials/ProductResult",await Model.ToPagedListAsync((int)ViewBag.Page,16));
    }
</div>