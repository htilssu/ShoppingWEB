@model List<Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section Styles
{
    <link rel="stylesheet" href="~/css/actions/HomeCategory.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/partials/ProductListStyle.css" asp-append-version="true"/>
}

@section Scripts
{
    <script src="~/js/actions/jscate.js" asp-append-version="true"></script>
}

<div class="banner">
    <img src="https://cf.shopee.vn/file/856d76a2fb06e2fbf00a82d2e37151d9" class="img-banner" alt="image"/>
</div>
<div class="container">
<div class="grid">
<div class="grid_row content">
<div class="grid_column-2">
    <nav class="category">
        <h3 class="category_heading">
            <svg class="category_heading-img" xmlns="http://www.w3.org/2000/svg" height="14px" viewBox="0 0 512 512">
                <path d="M40 48C26.7 48 16 58.7 16 72v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V72c0-13.3-10.7-24-24-24H40zM192 64c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zm0 160c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zm0 160c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zM16 232v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V232c0-13.3-10.7-24-24-24H40c-13.3 0-24 10.7-24 24zM40 368c-13.3 0-24 10.7-24 24v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V392c0-13.3-10.7-24-24-24H40z"/>
            </svg>
            TẤT CẢ DANH MỤC
        </h3>
        <ul class="category-list">
            <li class="category-item category-item-header">
                <a href="#" class="category-item-link ">Thời Trang Nam</a>
            </li>
            <li class="category-item category-item-active">
                <a href="#" class="category-item-link"> Áo Khoác</a>
            </li>
            <li class="category-item">
                <a href="#" class="category-item-link">Áo Vest và Blazer</a>
            </li>
            <li class="category-item">
                <a href="#" class="category-item-link">Áo hoodie,Áo len & Áo nỉ</a>
            </li>
            <li class="category-item">
                <a href="#" class="category-item-link">Quần Dài/Quần Âu</a>
            </li>
        </ul>
        <h3 class="category_heading-2">
            <svg enable-background="new 0 0 15 15" height="14px" viewBox="0 0 15 15" x="0" y="0" class="category_heading--img">
                <g>
                    <polyline fill="black" points="5.5 13.2 5.5 5.8 1.5 1.2 13.5 1.2 9.5 5.8 9.5 10.2" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10"></polyline>
                </g>
            </svg>
            BỘ LỌC TÌM KIẾM
        </h3>
        <div class="category-group">
            <div class="category-group-title">Theo Danh Mục</div>
            <ul class="category-group-list">
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Áo thun</span>
                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Áo khoác</span>

                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Hoodie & Áo nỉ </span>

                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Áo sơ mi </span>

                </li>
            </ul>
        </div>
        <div class="category-group">
            <div class="category-group-title">Nơi Bán</div>
            <ul class="category-group-list">
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Hà Nội</span>
                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Hồ Chí Minh</span>

                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Đà Nẵng</span>
                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Thái Nguyên</span>

                </li>
            </ul>
        </div>
        <div class="category-group">
            <div class="category-group-title">Đơn Vị Vận Chuyển</div>
            <ul class="category-group-list">
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Hỏa Tốc</span>

                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Nhanh</span>

                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Tiết Kiệm</span>

                </li>
            </ul>
        </div>
        <div class="category-group">
            <div class="category-group-title">Thương Hiệu</div>
            <ul class="category-group-list">
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">TeeLab</span>

                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Levents</span>

                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Bad Rabbit</span>

                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Nicolas</span>

                </li>
            </ul>
        </div>
        <div class="category-group">
            <div class="category-group-title">Khoảng Giá</div>
            <div class="category-group-filter">
                <input type="number" placeholder="đ TỪ" class="category-group-filter-input" maxlength="13" value="" id="priceFrom" min="0">
                <div class="category-group-filter-gach">-</div>
                <input type="number" placeholder="đ ĐẾN" class="category-group-filter-input" maxlength="13" value="" id="priceTo" min="0"/>
            </div>
            <button class="btn btn-apply category-group-filter-btn category-group--margin" id="applyFilter">Áp dụng</button>
        </div>

        <div class="category-group">
            <div class="category-group-title">Loại Shop</div>
            <ul class="category-group-list">
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Shopee</span>

                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Shopee Mall</span>

                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Shop Yêu Thích</span>

                </li>
            </ul>
        </div>
        <div class="category-group">
            <div class="category-group-title">Tình Trạng</div>
            <ul class="category-group-list">
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Mới</span>

                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Đã sử dụng</span>

                </li>
            </ul>
        </div>

        <div class="category-group">
            <div class="category-group-title">Dịch Vụ & Khuyến Mãi</div>
            <ul class="category-group-list">
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Voucher Xtra</span>
                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Đang giảm giá</span>
                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Gì cũng rẻ</span>
                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Miễn phí ship</span>
                </li>
                <li class="category-group-item">
                    <input type="checkbox" class="category-group-item-check">
                    <span class="category-group-item-label">Hàng có sẵn</span>
                </li>
            </ul>
        </div>
        <div class="category-group">
            <button class="btn btn-clear category-group-filter-btn category-group--margin" id="clearAll">Xoá Tất Cả</button>
        </div>
    </nav>
</div>
<div class="grid_column-10">
    <div class="home-filter">
        <span class="home-filter-label">Sắp xếp theo</span>
        <button class="home-filter-btn btn-active"> Phổ Biến </button>
        <button class="home-filter-btn "> Mới nhất </button>
        <button class="home-filter-btn"> Bán chạy </button>
        <div class="select-input">
            <span class="select-input-label">Giá</span>
            <svg viewBox="0 0 10 6" class="select-input-img" height="10px" width="10px">
