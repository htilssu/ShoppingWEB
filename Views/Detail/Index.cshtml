@model Product

@{
    // ViewBag.Title = Model.ProductName!;
    Layout = "_Layout";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/actions/DetailIndex.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/partials/ProductListStyle.css" asp-append-version="true"/>
}

@section Scripts
{
    <script src="~/js/partials/product_briefing.js"></script>
    <script src="~/js/partials/product_rating.js"></script>
}

@section HeaderNav
{
    @{
        await Html.RenderPartialAsync("Partial/HeaderPrimaryNav");
    }
}


<div class="container-md">
    @{
        await Html.RenderPartialAsync("Partials/ProductBriefing");
        await Html.RenderPartialAsync("Partials/SellerInfo");
        await Html.RenderPartialAsync("Partials/PageProduct");
    }
</div>